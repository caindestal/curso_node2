extends ../../layout.jade
block contenido
  div(class="col-md-4 remove-float center-block big-top-space")
    h1 Editar articulo
    form(action="/app/imagenes/#{imagen.id}?_method=PUT",method="POST")
      div(class="form-group")
        label(for="title") Titulo de articulo
        input(type="text", name="title", placeholder="Titulo de tu articulo", id="title",class="form-control",value="#{imagen.title}")
      div(class="text-area")
        label(for="article") Articulo
        textarea(class="form-control" rows="3",type="text-area",placeholder="Introduce tu Articulo",name="article", id="article") #{imagen.article}
      div(class="row top-space")
        div(class="col-xs-12 col-sm-6")
          input(type="submit" value="Editar articulo",class="btn btn-info")
