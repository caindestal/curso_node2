extends ../../layout.jade
block contenido
    div(class="container")
      h1 Mis Imagenes
      for imagen in imagenes
        div(class="white border tr large-padding")
          div(class="row")
            div(class="col-md-10")
              h2=imagen.title
              h3=imagen.article
            div(class="col-md-2")
              a(href="/app/imagenes/#{imagen._id}/edit",class="right-space") Editar
              form(action="/app/imagenes/#{imagen._id}?_method=DELETE",class ="link", method="POST")
                input(type="submit",  value="Eliminar")
