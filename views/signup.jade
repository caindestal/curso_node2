extends ./layout.jade
block contenido
  div(class="col-md-4 remove-float center-block big-top-space")
    form(action="users",method="POST")
      div(class="form-group")
        label(for="email") Email
        input(class="form-control",type="text", name="email", placeholder="Email", id="email")

      div(class"form-group")
        label(for="password") Password
        input(class="form-control",type="password", name="password", placeholder="Password", id="password")
        
      div(class"form-group")
          label(for="password") Confirm Password
          input(class="form-control",type="password", name="password_confirmation", placeholder="Confirm Password", id="password")
      div(class"form-group")
          label(for="username") Username
          input(class="form-control",type="text", name="username", placeholder="Introduce tu usuario", id="username")
      div(class="row top-space")
        div(class="col-xs-12 col-sm-6")
          input(type="submit" value="iniciar sesion",class="btn btn-info")
        div(class="col-xs-12 col-sm-6 text-right")
          a(href="/login") Ya tengo una cuenta    
